{
  "name": "chrome扩展测试",
  "version": "1.0",
  "manifest_version": 2,
  "description": "chrome扩展测试",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [ "bg.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content_scripts.js" ]
    }
  ],
  "permissions": [
    "tabs",
    "webNavigation"
  ]
}  